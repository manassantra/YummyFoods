@{
    ViewData["Title"] = "Login Page";
    @model YummyFood.Web.CommonBO.LoginBO;
}
<br />
<!-- ------------------ Header ------------------ -->

<div class="container d-flex justify-content-center" style="margin-top: 2rem !important">
    <div class="card col-lg-6 col-sm">
        <div class="card-header text-center">
            <h4 class="mod-text-head" style="font-size: 1.5rem !important">Please Login to Continue</h4>
        </div>
        <div class="card-body col justify-content-center p-4">
            <form asp-action="UserLogin" method="post">
                <div class="flex-row justify-content-center">
                    <div class="mb-3 row justify-content-center">
                        <label for="inputEmail" class="col col-form-label">Email</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" asp-for="Username" placeholder="email@example.com" required>
                        </div>
                    </div>
                    <div class="mb-3 row justify-content-center">
                        <label for="inputPassword" class="col col-form-label">Password</label>
                        <div class="col-sm-6">
                            <input type="password" class="form-control" asp-for="Password" placeholder="******" required>
                        </div>
                    </div>
                    <div class="mb-3 row justify-content-center">
                        <div class="d-flex justify-content-around">
                            <div class="row justify-content-end p-2">
                                <div class="col mr-1 p-1">
                                    <input type="submit" value="Login" class="btn btn-dark form-control" />
                                </div>
                                <div class="col ml-1 p-1">
                                    <input type="reset" value="Reset" class="btn btn-outline-danger form-control text-reset" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="d-flex justify-content-center">
                    New User ? <a class="nav-link text-black" style="margin-top: -7px">Signup</a> Here
                </div>
                <div class="col-md-auto "></div>
            </div>
            <div class="row">
                <div class="d-flex justify-content-center">
                    Forgot Password ? <a class="nav-link text-black" style="margin-top: -7px">Reset Password</a>
                </div>
            </div>
        </div>
    </div>
</div>

